            				{
            					 "color":"#000000",								 
            					 "colorPressed":"#BBBBBB",
            					 "float":"right",
            					 "fontSize":"22px",
            					 "fontSrc":"/static/font/icon.ttf",
            					 "text":"\ue628"
            				}
            			]
            		}
            	}
            }
        }
        ,{
            "path" : "pages/detail/detail",
