            				{
            					 "color":"#000000",								 
            					 "colorPressed":"#BBBBBB",
            					 "float":"right",
            					 "fontSize":"22px",
            					 "fontSrc":"/static/font/icon.ttf",
            					 "text":"\ue684"
            				}
            			]
            		}
            	}
            }
        }
        ,{
            "path" : "pages/home/home",
            "style" : {}
